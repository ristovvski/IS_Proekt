@model IS_Proekt.Domain.Publisher

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1>Publisher Details</h1>
    </div>

    <div class="card shadow border-0 rounded">
        <div class="card-body p-4">
            <h4 class="card-title mb-4">Publisher Information</h4>
            <hr />
            <dl class="row mb-3">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Address)
                </dd>
            </dl>
            <div class="d-flex justify-content-start">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-3">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
