@model IS_Proekt.Domain.Book

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Create a New Book</h1>

    <h4 class="mb-3">Book Details</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label font-weight-bold"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label font-weight-bold"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter book description" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CoverImage" class="control-label font-weight-bold"></label>
                    <input asp-for="CoverImage" class="form-control" placeholder="Enter URL for cover image" />
                    <span asp-validation-for="CoverImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label font-weight-bold"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter book price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Rating" class="control-label font-weight-bold"></label>
                    <input asp-for="Rating" class="form-control" type="number" step="0.1" min="0" max="5" placeholder="Enter book rating (0-5)" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AuthorId" class="control-label font-weight-bold">Author</label>
                    <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorId">
                        <option value="">Select Author</option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PublisherId" class="control-label font-weight-bold">Publisher</label>
                    <select asp-for="PublisherId" class="form-control" asp-items="ViewBag.PublisherId">
                        <option value="">Select Publisher</option>
                    </select>
                    <span asp-validation-for="PublisherId" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
